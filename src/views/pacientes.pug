extends layout 

block content 
    div(class='w-full')
        div(class='flex justify-between items-center mb-5')
            h2(class="text-2xl font-bold text-gray-800") Pacientes
            a( href='/admisiones/nueva' class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition") Nuevo Paciente

        div(class="p-8 bg-white rounded-xl shadow")

            div(class="flex items-center justify-between mb-6")
                
                div(class="flex gap-2")
                    button(class="flex items-center border border-2-gray-100 text-gray-500 text-sm py-2 px-4 rounded-lg hover:bg-gray-200 transition flex gap-2")
                        //- Icono Filtro SVG
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 0 1-.659 1.591l-5.432 5.432a2.25 2.25 0 0 0-.659 1.591v2.927a2.25 2.25 0 0 1-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 0 0-.659-1.591L3.659 7.409A2.25 2.25 0 0 1 3 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0 1 12 3Z" />
                        </svg>
                        p Filtro

                    button(class="flex items-center border border-2-gray-100 text-gray-500 text-sm py-2 px-4 rounded-lg hover:bg-gray-200 transition flex gap-2")
                        //- Icono Sort SVG
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                        <path fill-rule="evenodd" d="M2.24 6.8a.75.75 0 0 0 1.06-.04l1.95-2.1v8.59a.75.75 0 0 0 1.5 0V4.66l1.95 2.1a.75.75 0 1 0 1.1-1.02l-3.25-3.5a.75.75 0 0 0-1.1 0L2.2 5.74a.75.75 0 0 0 .04 1.06Zm8 6.4a.75.75 0 0 0-.04 1.06l3.25 3.5a.75.75 0 0 0 1.1 0l3.25-3.5a.75.75 0 1 0-1.1-1.02l-1.95 2.1V6.75a.75.75 0 0 0-1.5 0v8.59l-1.95-2.1a.75.75 0 0 0-1.06-.04Z" clip-rule="evenodd" />
                        </svg>
                        p Ordenar

            div(class="overflow-x-auto")
                table(class="table-auto min-w-full text-left text-sm text-gray-700")
                    thead(class="bg-gray-50 text-xs text-gray-500")
                        tr
                            th(class="px-6 py-3")
                                input(type="checkbox") 
                            th(class="px-6 py-3") Nombre
                            th(class="px-6 py-3") Apellido
                            th(class="px-6 py-3") Documento
                            th(class="px-6 py-3") Tel√©fono
                            th(class="px-6 py-3") Acciones

                    tbody
                        each paciente, index in pacientes
                            tr(class="border-b hover:bg-gray-50")
                                td(class="px-6 py-4")
                                    input(type="checkbox")
                                td(class="px-6 py-4 gap-2")
                                    span(class="font-medium")= paciente.nombre
                                td(class="px-6 py-4 gap-2")
                                    span(class="font-medium")= paciente.apellido
                                td(class="px-6 py-4")= paciente.dni
                                td(class="px-6 py-4")= paciente.telefono
                                td(class="px-6 py-4 flex gap-2")
                                    a(href=`/pacientes/editar/${paciente.id}` class="text-gray-500 hover:text-blue-500")
                                        //- Icono editar SVG
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                        </svg>

                                    button(class="text-gray-500 hover:text-red-600")
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                        </svg>

